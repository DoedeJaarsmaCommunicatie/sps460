<section class="lg:border-t lg:border-b border-primary">
    <div class="container mx-auto lg:flex">
        <aside class="background-breakout text-secondary lg:w-1/2 content p-8 md:px-0">
            <h4>
                {{ theme.theme_mod('inloop-title') }}
            </h4>
            {{ theme.theme_mod('inloop-content')|wpautop }}

            {% for moment in theme.theme_mod('date-table-rows') %}
                <h5><strong>{{ moment.title }}</strong></h5>
                <table class="inloop-date">
                    <tr>
                        <th>Datum:</th>
                        <td>{{ moment.date|localizeddate('long', 'none', 'nl_NL') }}</td>
                    </tr>
                    <tr>
                        <th>Tijd:</th>
                        <td>{{ moment.time }}</td>
                    </tr>
                    <tr>
                        <th>Locatie:</th>
                        <td>{{ moment.location }}</td>
                    </tr>
                </table>
            {% endfor %}
        </aside>
        <aside class="content p-8 lg:w-1/2 text-primary" id="vue-app">
            <h4>Aanmelden voor de buurtbijeenkomsten</h4>
            <p>
                Wilt u nog beter op de hoogte blijven bij de
                transformatie van de Spaarndammerstraat 460?
                Meldt u dan aan voor de Buurtbijeenkomst.
            </p>

            <kbg-subscribe></kbg-subscribe>
        </aside>
    </div>
</section>
