{% set _hero1 = fn('get_field', 'hero_1', post.ID) %}
{% set _hero1_image = Image(_hero1.image) %}
<section class="lg:flex px-4 md:px-0">
    <figure class="hero large lg:w-1/2">
        <img
            src="{{ _hero1_image.src }}"
            alt="{{ _hero1_image.alt }}"
            title="{{ _hero1_image.title }}"
        />
    </figure>
    <aside class="lg:m-auto lg:w-1/3">
        <h2 class="hero title">
            {{ _hero1.title }}
        </h2>
    </aside>
</section>
